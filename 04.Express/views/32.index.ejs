<!DOCTYPE html>
<html lang="ko">
<head>
   <%- include(`${path}/head`) %>   
</head>
<body>
   <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
         <div class="collapse navbar-collapse" id="collapsibleNavbar">
               <a class="navbar-brand" href="#">
                  <img src="tigers/tigers.jpg" alt="로고" height="64">
               </a>
               <ul class="navbar-nav">
                  <li class="nav-item" style="margin-left: 100px;">
                     <a class="nav-link" href="/create">추가<i class="fa-solid fa-plus"></i></a>
                  </li>
               </ul>
         </div>
      </div>
   </nav>
 

   <div class="container mt-3">
      <div class="row">       <!-- Grid 적용 -->
         <div class="col-2"></div>
         <div class="col-8">
               <table class="table table-borderless">
                  <tr>
                     <th>ID</th>
                     <th>선수명</th>
                     <th>사진</th>
                     <th>백넘버</th>
                     <th>&nbsp;&nbsp;포지션&nbsp;&nbsp;</th>
                     <th>수정/삭제</th>
                  </tr>
                  <!--  ${trs} -->
                  <% for(let row of rows){ %>
                     <tr>
                        <td><%= row.id %></td>
                        <td><%= row.player %></td>
                        <td><img src="/tigers/<%- row.player %>.jpg" height="48"></td>
                        <td><%= row.backNo %></td>
                        <td><%= row.position %></td>
                        <td>  <a href="/update/<%- row.id %>"><i class="fa-regular fa-pen-to-square"></i></a>&nbsp;
                              <a href="/delete/<%- row.id %>"><i class="fa-solid fa-user-minus"></i></a>
                           </td>
                     </tr>
                  <% } %>
               </table>
         </div>
         <div class="col-2"></div>
      </div>
   </div>
</body>
</html>